<p id="notice"><%= notice %></p>

<% @posts.each do |post| %>
<div>
  <h4><%= link_to post.title, post %></h4>
  <p><%= post.summary %></p>
  <%= link_to 'Edit', edit_post_path(post) %> |
  <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
<% end %>

<%= link_to 'New Post', new_post_path %>
